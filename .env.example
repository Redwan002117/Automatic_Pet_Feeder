# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Settings
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=1d

# MQTT Configuration (for IoT devices)
MQTT_BROKER=mqtt://broker.example.com
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_CLIENT_ID=pet-feeder-server

# Email Configuration (if using custom email service)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# Other Settings
TIMEZONE=UTC
LOG_LEVEL=info

# Application Configuration
APP_NAME=Automatic Pet Feeder
APP_ENVIRONMENT=development
APP_VERSION=1.0.0

# API Keys for Third-Party Services (if needed)
# WEATHER_API_KEY=your_weather_api_key
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
# EMAIL_SERVICE=your_email_service
# EMAIL_USER=your_email_username
# EMAIL_PASSWORD=your_email_password

# Analytics Configuration
ENABLE_ANALYTICS=false
# ANALYTICS_KEY=your_analytics_key