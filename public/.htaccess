# Enable URL rewriting
RewriteEngine On

# Set the base directory for rewrites
# For cPanel, you may need to adjust this if using a subdomain or subdirectory
RewriteBase /

# If the request is for an actual file or directory, don't rewrite
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle cPanel specific paths if needed
# Uncomment and modify the following line if your app is in a subdirectory
# RewriteBase /subdirectory

# Redirect all API requests to the API endpoint
RewriteRule ^api/(.*)$ api.php?request=$1 [QSA,L]

# Alternative API routing for cPanel environments
# Uncomment the line below and comment out the line above if needed
# RewriteRule ^api/(.*)$ api-wrapper.php?endpoint=$1 [QSA,L]

# Rewrite all other requests to index.html for the SPA
RewriteRule ^ index.html [L]

# Set security headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    # Enforce HTTPS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Enable CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
</IfModule>

# Set default character set
AddDefaultCharset UTF-8

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set caching headers
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/x-javascript "access plus 1 month"
    ExpiresDefault "access plus 2 days"
</IfModule>